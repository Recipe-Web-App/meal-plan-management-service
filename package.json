  "scripts": {
    "build": "nest build && tsc-alias",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "bun run dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:cov": "bun test --coverage",
    "test:debug": "bun --inspect-brk test",
    "test:e2e": "bun test test/**/*.e2e-spec.ts",
    "pre-commit": "pre-commit run --all-files",
    "markdown:lint": "markdownlint \"**/*.md\" --fix",
    "markdown:lint:check": "markdownlint \"**/*.md\"",
    "license:check": "license-checker --onlyAllow 'MIT;MIT*;Apache-2.0;ISC;BSD-2-Clause;BSD-3-Clause;0BSD;Python-2.0;CC-BY-4.0;BlueOak-1.0.0;Unlicense;(MIT OR CC0-1.0);(MIT OR Apache-2.0);(BSD-2-Clause OR MIT OR Apache-2.0);CC-BY-3.0;CC0-1.0;(MIT AND CC-BY-3.0);UNLICENSED;UNKNOWN;Custom: https://www.prisma.io/terms'",
