# Application
NODE_ENV=development
MEAL_PLAN_SERVICE_SERVER_HOST=0.0.0.0
MEAL_PLAN_SERVICE_SERVER_PORT=3000
MEAL_PLAN_SERVICE_SERVER_MAX_UPLOAD_SIZE=104857600

# Database Configuration (aligned with K8s)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=meal_plan_db
POSTGRES_SCHEMA=public
MEAL_PLAN_MANAGEMENT_DB_USER=meal_plan_user
MEAL_PLAN_MANAGEMENT_DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://${MEAL_PLAN_MANAGEMENT_DB_USER}:${MEAL_PLAN_MANAGEMENT_DB_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB} # pragma: allowlist secret
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=1
DATABASE_ACQUIRE_TIMEOUT_SECONDS=30

# Storage Configuration
MEAL_PLAN_SERVICE_STORAGE_BASE_PATH=/app/meal-plans
MEAL_PLAN_SERVICE_STORAGE_TEMP_PATH=/app/meal-plans/temp
MEAL_PLAN_SERVICE_STORAGE_MAX_FILE_SIZE=524288000

# JWT
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=1d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# External Services
RECIPE_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration (aligned with K8s)
MEAL_PLAN_SERVICE_LOGGING_LEVEL=info
MEAL_PLAN_SERVICE_LOGGING_FORMAT=json
